generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  UNVERIFIED
  LOCKED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum ServiceStatus {
  AVAILABLE
  UNAVAILABLE
  NO_LONGER_PROVIDED
}

enum UnitType {
  PORTION
  SERVING
  PIECE
  SLICE
  SET
  BOX
  TRAY
  PACK
  CUP
  BOTTLE
  CAN
  DISH
  BOWL
  GLASS
  JAR
}

enum RegistrationStatus {
  DRAFT
  PENDING
  APPROVED
  INFO_REQUIRED
  REJECTED
}

enum ReportStatus {
  PENDING
  RESOLVED
  REJECTED
}

enum NotificationType {
  BOOKING_CREATED
  REVIEW_CREATED

  REPORT_CREATED
  REPORT_RESOLVED

  // Provider registration
  REGISTRATION_SUBMITTED
  REGISTRATION_APPROVED
  REGISTRATION_REJECTED
  REGISTRATION_INFO_REQUIRED

  SYSTEM_INFO
}

enum ActionTaker {
  PROVIDER
  ADMIN
}

enum Action {
  SEND
  APPROVE
  REJECT
  REQUIRE_INFO
}

model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  password      String
  name          String
  email         String         @unique
  phone         String?        @unique
  status        UserStatus     @default(UNVERIFIED)
  is_admin      Boolean        @default(false)
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
  Provider      Provider[]
  Traveler      Traveler[]
  notifications Notification[]
}

model Provider {
  id               Int       @id
  description      String?
  logo_url         String?
  website_link     String?
  address          String?
  id_card          String    @unique
  province         String
  country          String
  establish_year   Int
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  user             User      @relation(fields: [id], references: [id])
  Services         Service[]
  bookings         Booking[]
  reports_received Report[]  @relation("ProviderReports")
}

model Traveler {
  id                Int               @id
  gender            Gender?
  dob               DateTime?
  location          String?
  avatar_url        String?
  created_at        DateTime          @default(now())
  updated_at        DateTime          @updatedAt
  user              User              @relation(fields: [id], references: [id])
  cart              Cart?
  bookings          Booking[]         @relation("TravelerBookings")
  wishlists         Wishlist[]
  itineraries       Itinerary[]
  sharedItineraries SharedItinerary[]
  reports_sent      Report[]          @relation("TravelerReports")
  reviews           Review[]
}

model ServiceType {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  Services    Service[]
}

model Service {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  location    String?
  rating      Float          @default(0)
  type_id     Int
  provider_id Int
  price_min   Float?
  price_max   Float?
  created_at  DateTime       @default(now())
  updated_at  DateTime       @updatedAt
  Type        ServiceType    @relation(fields: [type_id], references: [id])
  Provider    Provider       @relation(fields: [provider_id], references: [id])
  Tags        ServiceOnTag[]
  Menus       Menu[]
  Tours       Tour[]
  Rooms       Room[]
  Tickets     Ticket[]
  Vouchers    Voucher[]
  Wishlists   Wishlist[]
  reviews     Review[]
  Bookings    Booking[]
}

model ServiceTag {
  id         Int            @id @default(autoincrement())
  name       String
  category   String
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt
  Services   ServiceOnTag[]

  @@unique([name, category])
}

model ServiceOnTag {
  service_id Int
  tag_id     Int
  Service    Service    @relation(fields: [service_id], references: [id])
  Tag        ServiceTag @relation(fields: [tag_id], references: [id])

  @@id([service_id, tag_id]) // composite primary key
}

model Menu {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  cover_url   String?
  service_id  Int
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  Service     Service    @relation(fields: [service_id], references: [id])
  MenuItems   MenuItem[]
  reviews     Review[]
}

model MenuItem {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  image_url   String?
  price       Float
  unit        UnitType
  status      ServiceStatus @default(AVAILABLE)
  menu_id     Int
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  Menu        Menu          @relation(fields: [menu_id], references: [id])
  cart_items  CartItem[]    @relation("CartItemToMenuItem")
}

model Tour {
  id            Int     @id @default(autoincrement())
  name          String
  description   String?
  service_price Float
  total_price   Float

  start_time DateTime @default(now()) // Ngày, giờ bắt đầu
  end_time   DateTime @default(now()) // Ngày, giờ kết thúc

  max_participants Int @default(1) // Số người tối đa cho tour này
  current_bookings Int @default(0) // Số người đã đặt

  status       ServiceStatus @default(AVAILABLE)
  service_id   Int
  tourguide_id Int?
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt

  Service    Service     @relation(fields: [service_id], references: [id])
  TourPlace  TourPlace[]
  TourGuide  TourGuide?  @relation(fields: [tourguide_id], references: [id])
  cart_items CartItem[]  @relation("CartItemToTour")
  reviews    Review[]
}

model Place {
  id            Int      @id @default(autoincrement())
  name          String
  description   String?
  address       String?
  opening_hours Json?
  entry_fee     Float?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  TourPlace TourPlace[]
  Tickets   Ticket[]
}

model TourPlace {
  tour_id     Int
  place_id    Int
  description String?
  start_time  String?
  end_time    String?
  Tour        Tour    @relation(fields: [tour_id], references: [id])
  Place       Place   @relation(fields: [place_id], references: [id])

  @@id([tour_id, place_id])
}

model TourGuide {
  id          Int      @id @default(autoincrement())
  name        String
  phone       String
  description String?
  image_url   String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  Tour        Tour[]
}

model Image {
  id           Int     @id @default(autoincrement())
  url          String
  position     Int     @default(0) // for ordering images
  is_main      Boolean @default(false) // main image flag
  related_id   Int // ID of the related entity
  related_type String // e.g. 'Service', 'Menu', 'Place', etc.

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Facility {
  id         Int            @id @default(autoincrement())
  name       String
  icon_url   String?
  rooms      RoomFacility[]
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt
}

model Room {
  id              Int     @id @default(autoincrement())
  service_id      Int
  name            String
  description     String?
  price_per_night Decimal @db.Decimal(10, 2)

  total_rooms Int @default(1)

  max_children_number Int?
  max_adult_number    Int?
  pet_allowed         Boolean       @default(false)
  bed_number          Int
  size_sqm            Float? // Diện tích m²
  view_type           String? // "sea_view", "city_view", "garden_view"
  status              ServiceStatus @default(AVAILABLE)

  service    Service        @relation(fields: [service_id], references: [id], onDelete: Cascade)
  facilities RoomFacility[]
  cart_items CartItem[]     @relation("CartItemToRoom")

  created_at     DateTime           @default(now())
  updated_at     DateTime           @updatedAt
  availabilities RoomAvailability[]
  reviews        Review[]

  @@index([service_id])
}

model RoomAvailability {
  id      Int      @id @default(autoincrement())
  room_id Int
  date    DateTime @db.Date

  available_count Int // Số phòng còn trống
  price_override  Decimal? @db.Decimal(10, 2) // Giá đặc biệt cho ngày này

  room Room @relation(fields: [room_id], references: [id], onDelete: Cascade)

  @@unique([room_id, date])
  @@index([room_id, date])
}

model RoomFacility {
  room_id     Int
  facility_id Int
  room        Room     @relation(fields: [room_id], references: [id], onDelete: Cascade)
  facility    Facility @relation(fields: [facility_id], references: [id], onDelete: Cascade)

  @@id([room_id, facility_id])
  @@index([room_id])
  @@index([facility_id])
}

model Registration {
  id                String             @id
  provider_id       Int
  status            RegistrationStatus @default(PENDING)
  metadata          Json
  created_at        DateTime           @default(now())
  updated_at        DateTime           @updatedAt
  approvalHistories ApprovalHistory[]
}

model ApprovalHistory {
  id              Int          @id @default(autoincrement())
  registration_id String
  registraton     Registration @relation(fields: [registration_id], references: [id], onDelete: Cascade)
  action          Action
  by              ActionTaker
  note            String?
  created_at      DateTime     @default(now())
}

model Ticket {
  id             Int                  @id @default(autoincrement())
  service_id     Int
  name           String
  description    String?
  price          Float
  place_id       Int
  status         ServiceStatus        @default(AVAILABLE)
  created_at     DateTime             @default(now())
  updated_at     DateTime             @updatedAt
  Service        Service              @relation(fields: [service_id], references: [id], onDelete: Cascade)
  Place          Place                @relation(fields: [place_id], references: [id], onDelete: Cascade)
  cart_items     CartItem[]           @relation("CartItemToTicket")
  availabilities TicketAvailability[]
  reviews        Review[]
}

model TicketAvailability {
  id              Int      @id @default(autoincrement())
  ticket_id       Int
  date            DateTime @db.Date
  available_count Int
  max_count       Int? // null = không giới hạn
  price_override  Float?

  ticket Ticket @relation(fields: [ticket_id], references: [id], onDelete: Cascade)

  @@unique([ticket_id, date])
  @@index([ticket_id, date])
}

model Voucher {
  id               Int       @id @default(autoincrement())
  service_id       Int?
  title            String
  code             String    @unique
  discount_percent Float
  description      String
  valid_from       DateTime?
  valid_to         DateTime?
  is_global        Boolean   @default(false)
  max_uses         Int?
  used_count       Int       @default(0)
  created_at       DateTime  @default(now())

  service  Service?  @relation(fields: [service_id], references: [id])
  bookings Booking[]
}

model Cart {
  id          Int      @id @default(autoincrement())
  traveler_id Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  traveler Traveler   @relation(fields: [traveler_id], references: [id], onDelete: Cascade)
  items    CartItem[]

  @@unique([traveler_id]) // Mỗi user chỉ có 1 giỏ hàng
}

enum CartItemType {
  ROOM
  TOUR
  TICKET
  MENU_ITEM
}

model CartItem {
  id            Int          @id @default(autoincrement())
  cart_id       Int
  item_type     CartItemType
  item_id       Int
  quantity      Int          @default(1)
  checkin_date  DateTime? // cho ROOM, TOUR
  checkout_date DateTime? // cho ROOM
  visit_date    DateTime? // cho TOUR, TICKET (ngày sử dụng)
  note          String?

  cart      Cart?     @relation(fields: [cart_id], references: [id])
  room      Room?     @relation("CartItemToRoom", fields: [item_id], references: [id], onDelete: Cascade, map: "fk_cartitem_room")
  tour      Tour?     @relation("CartItemToTour", fields: [item_id], references: [id], onDelete: Cascade, map: "fk_cartitem_tour")
  ticket    Ticket?   @relation("CartItemToTicket", fields: [item_id], references: [id], onDelete: Cascade, map: "fk_cartitem_ticket")
  menu_item MenuItem? @relation("CartItemToMenuItem", fields: [item_id], references: [id], onDelete: Cascade, map: "fk_cartitem_menuitem")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([cart_id])
  @@index([item_type, item_id])
}

enum BookingStatus {
  PENDING // Chưa thanh toán
  PAID // Đã thanh toán
  IN_PROGRESS // Đang diễn ra
  COMPLETED // Hoàn thành
  CANCELLED // Hủy
  REFUNDED // Hoàn tiền
}

model Booking {
  id              String        @id @default(cuid())
  traveler_id     Int
  provider_id     Int?
  status          BookingStatus @default(PENDING)
  total_amount    Decimal       @db.Decimal(12, 2)
  discount_amount Decimal       @default(0) @db.Decimal(12, 2)
  final_amount    Decimal       @db.Decimal(12, 2)
  voucher_id      Int?
  payment_id      String?
  booking_date    DateTime      @default(now())
  notes           Json?
  service_id      Int?

  service  Service?      @relation(fields: [service_id], references: [id])
  traveler Traveler      @relation("TravelerBookings", fields: [traveler_id], references: [id])
  provider Provider?     @relation(fields: [provider_id], references: [id])
  voucher  Voucher?      @relation(fields: [voucher_id], references: [id])
  items    BookingItem[]
  payment  Payment?      @relation("PaymentToBookings", fields: [payment_id], references: [id])

  expiry_time DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  @@index([traveler_id])
  @@index([provider_id])
  @@index([status])
}

enum BookingItemType {
  ROOM
  TOUR
  TICKET
  MENU_ITEM
}

model BookingItem {
  id            Int             @id @default(autoincrement())
  booking_id    String
  item_type     BookingItemType
  item_id       Int
  item_name     String?
  quantity      Int
  unit_price    Decimal         @db.Decimal(12, 2)
  total_price   Decimal         @db.Decimal(12, 2)
  checkin_date  DateTime?
  checkout_date DateTime?
  visit_date    DateTime?

  booking Booking @relation(fields: [booking_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())

  @@index([booking_id])
  @@index([item_type, item_id])
}

enum PaymentMethod {
  BANK_TRANSFER
  CREDIT_CARD
  MOMO
  ZALOPAY
  CASH
  VNPAY
  BLOCKCHAIN
  GRANTED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

model Payment {
  id             String        @id @default(cuid())
  amount         Decimal       @db.Decimal(12, 2)
  method         PaymentMethod
  status         PaymentStatus @default(PENDING)
  transaction_id String? // Mã giao dịch từ cổng thanh toán
  paid_at        DateTime?
  payload        Json? // Lưu toàn bộ response từ cổng (dùng để debug)

  bookings Booking[] @relation("PaymentToBookings")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([status])
  @@index([transaction_id])
}

model Review {
  id          Int @id @default(autoincrement())
  traveler_id Int
  service_id  Int

  room_id   Int?
  tour_id   Int?
  ticket_id Int?
  menu_id   Int?

  rating     Int      @default(5)
  comment    String?
  created_at DateTime @default(now())

  traveler Traveler @relation(fields: [traveler_id], references: [id])
  service  Service  @relation(fields: [service_id], references: [id])
  room     Room?    @relation(fields: [room_id], references: [id])
  tour     Tour?    @relation(fields: [tour_id], references: [id])
  ticket   Ticket?  @relation(fields: [ticket_id], references: [id])
  menu     Menu?    @relation(fields: [menu_id], references: [id])
}

model Wishlist {
  id          Int      @id @default(autoincrement())
  traveler_id Int
  service_id  Int
  created_at  DateTime @default(now())

  traveler Traveler @relation(fields: [traveler_id], references: [id], onDelete: Cascade)
  service  Service  @relation(fields: [service_id], references: [id], onDelete: Cascade)

  @@unique([traveler_id, service_id])
}

model Notification {
  id         Int              @id @default(autoincrement())
  user_id    Int
  title      String
  message    String
  type       NotificationType
  is_read    Boolean          @default(false)
  related_id String? // id của đối tượng liên quan (report, booking...)

  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id, is_read])
}

model Report {
  id Int @id @default(autoincrement())

  reporter_id Int // người tố cáo (traveler)
  reporter    Traveler @relation("TravelerReports", fields: [reporter_id], references: [id])

  provider_id Int // provider bị tố cáo
  provider    Provider @relation("ProviderReports", fields: [provider_id], references: [id])

  content String?
  status  ReportStatus @default(PENDING)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

// ==================== AI ITINERARY PLANNING ====================

enum ItineraryStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Itinerary {
  id          String   @id @default(cuid())
  traveler_id Int
  traveler    Traveler @relation(fields: [traveler_id], references: [id], onDelete: Cascade)

  title           String?
  destination     String
  start_date      DateTime
  end_date        DateTime
  budget          Float?
  preferences     String[]
  special_request String?

  status          ItineraryStatus @default(DRAFT)
  is_favorite     Boolean         @default(false)
  cover_image_url String?

  ai_summary       String?
  ai_tips          String[]
  budget_breakdown Json?

  days        ItineraryDay[]
  shared_with SharedItinerary[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([traveler_id])
  @@index([status])
  @@index([start_date])
}

model ItineraryDay {
  id           String    @id @default(cuid())
  itinerary_id String
  itinerary    Itinerary @relation(fields: [itinerary_id], references: [id], onDelete: Cascade)

  day_number Int
  date       DateTime
  theme      String?
  notes      String?

  activities ItineraryActivity[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([itinerary_id, day_number])
  @@index([itinerary_id])
}

enum ActivityType {
  RESTAURANT
  ATTRACTION
  ACCOMMODATION
  TRANSPORT
  SHOPPING
  ENTERTAINMENT
  OTHER
}

enum ActivitySource {
  AI_GENERATED
  USER_ADDED
  BOOKING_LINKED
}

model ItineraryActivity {
  id     String       @id @default(cuid())
  day_id String
  day    ItineraryDay @relation(fields: [day_id], references: [id], onDelete: Cascade)

  order         Int
  time          String
  duration      Int?
  title         String
  description   String?
  exact_address String?
  type          ActivityType
  source        ActivitySource @default(AI_GENERATED)

  latitude  Float?
  longitude Float?

  estimated_cost Float?
  actual_cost    Float?
  price_level    Int?

  estimated_rating Float?
  popular_times    String?
  local_tips       String[]

  photo_url       String?
  photo_small_url String?
  photographer    String?
  photo_source    String?

  cuisine String?
  phone   String?
  website String?

  is_completed Boolean @default(false)
  user_notes   String?
  user_rating  Int?

  cached_reviews Json?

  booking_id String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([day_id])
  @@index([type])
}

model SharedItinerary {
  id           String    @id @default(cuid())
  itinerary_id String
  itinerary    Itinerary @relation(fields: [itinerary_id], references: [id], onDelete: Cascade)

  shared_with_traveler_id Int
  shared_with_traveler    Traveler @relation(fields: [shared_with_traveler_id], references: [id], onDelete: Cascade)

  can_edit  Boolean  @default(false)
  shared_at DateTime @default(now())

  @@unique([itinerary_id, shared_with_traveler_id])
  @@index([shared_with_traveler_id])
}
