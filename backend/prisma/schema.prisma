generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  UNVERIFIED
  LOCKED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum ServiceStatus {
  AVAILABLE
  UNAVAILABLE
  NO_LONGER_PROVIDED
}

enum UnitType {
  PORTION
  SERVING
  PIECE
  SLICE
  SET
  BOX
  TRAY
  PACK
  CUP
  BOTTLE
  CAN
  DISH
  BOWL
  GLASS
  JAR
}

enum RegistrationStatus {
  DRAFT
  PENDING
  APPROVED
  INFO_REQUIRED
  REJECTED
}

enum ActionTaker {
  PROVIDER
  ADMIN
}

enum Action {
  SEND
  APPROVE
  REJECT
  REQUIRE_INFO
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  password   String
  name       String
  email      String     @unique
  phone      String?    @unique
  status     UserStatus @default(UNVERIFIED)
  is_admin   Boolean    @default(false)
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  Provider   Provider[]
  Traveler   Traveler[]
}

model Provider {
  id             Int       @id
  description    String?
  logo_url       String?
  website_link   String?
  address        String?
  id_card        String    @unique
  province       String
  country        String
  establish_year Int
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  user           User      @relation(fields: [id], references: [id])
  Services       Service[]
  bookings       Booking[]
}

model Traveler {
  id         Int       @id
  gender     Gender?
  dob        DateTime?
  location   String?
  avatar_url String?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  user       User      @relation(fields: [id], references: [id])
  cart       Cart?
  bookings   Booking[] @relation("TravelerBookings")
}

model ServiceType {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  Services    Service[]
}

model Service {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  location    String?
  rating      Float          @default(0)
  type_id     Int
  provider_id Int
  price_min   Float?
  price_max   Float?
  created_at  DateTime       @default(now())
  updated_at  DateTime       @updatedAt
  Type        ServiceType    @relation(fields: [type_id], references: [id])
  Provider    Provider       @relation(fields: [provider_id], references: [id])
  Tags        ServiceOnTag[]
  Menus       Menu[]
  Tour        Tour[]
  Rooms       Room[]
  Tickets     Ticket[]
  Vouchers    Voucher[]
}

model ServiceTag {
  id         Int            @id @default(autoincrement())
  name       String
  category   String
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt
  Services   ServiceOnTag[]

  @@unique([name, category])
}

model ServiceOnTag {
  service_id Int
  tag_id     Int
  Service    Service    @relation(fields: [service_id], references: [id])
  Tag        ServiceTag @relation(fields: [tag_id], references: [id])

  @@id([service_id, tag_id]) // composite primary key
}

model Menu {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  cover_url   String?
  service_id  Int
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  Service     Service    @relation(fields: [service_id], references: [id])
  MenuItems   MenuItem[]
}

model MenuItem {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  image_url   String?
  price       Float
  unit        UnitType
  status      ServiceStatus @default(AVAILABLE)
  menu_id     Int
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  Menu        Menu          @relation(fields: [menu_id], references: [id])
}

model Tour {
  id            Int           @id @default(autoincrement())
  name          String
  description   String?
  service_price Float
  total_price   Float
  duration      Float // in hours
  is_recurring  Boolean       @default(false)
  repeat_rule   String? // 'daily' | 'weekly' | 'monthly'
  repeat_days   String[] // ['monday', 'friday'] nếu weekly
  start_date    DateTime? // chỉ cần nếu là tour 1 lần
  end_date      DateTime? // nếu tour kéo dài nhiều ngày
  status        ServiceStatus @default(AVAILABLE)
  service_id    Int
  tourguide_id  Int?
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
  Service       Service       @relation(fields: [service_id], references: [id])
  TourPlace     TourPlace[]
  TourGuide     TourGuide?    @relation(fields: [tourguide_id], references: [id])
}

model Place {
  id            Int         @id @default(autoincrement())
  name          String
  description   String?
  image_url     String?
  address       String?
  opening_hours Json?
  entry_fee     Float?
  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt
  TourPlace     TourPlace[]
  Tickets       Ticket[]
}

model TourPlace {
  tour_id     Int
  place_id    Int
  description String?
  start_time  String?
  end_time    String?
  Tour        Tour    @relation(fields: [tour_id], references: [id])
  Place       Place   @relation(fields: [place_id], references: [id])

  @@id([tour_id, place_id])
}

model TourGuide {
  id          Int      @id @default(autoincrement())
  name        String
  phone       String
  description String?
  image_url   String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  Tour        Tour[]
}

model Image {
  id           Int     @id @default(autoincrement())
  url          String
  position     Int     @default(0) // for ordering images
  is_main      Boolean @default(false) // main image flag
  related_id   Int // ID of the related entity
  related_type String // e.g. 'Service', 'Menu', 'Place', etc.

  room Room? @relation("RoomImages", fields: [related_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Facility {
  id         Int            @id @default(autoincrement())
  name       String
  icon_url   String?
  rooms      RoomFacility[]
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt
}

model Room {
  id                  Int     @id @default(autoincrement())
  service_id          Int
  name                String
  description         String?
  price_per_night     Decimal @db.Decimal(10, 2)
  max_children_number Int?
  max_adult_number    Int?
  pet_allowed         Boolean @default(false)
  bed_number          Int
  service             Service @relation(fields: [service_id], references: [id], onDelete: Cascade)

  facilities RoomFacility[]
  images     Image[]        @relation("RoomImages")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([service_id])
}

model RoomFacility {
  room_id     Int
  facility_id Int
  room        Room     @relation(fields: [room_id], references: [id], onDelete: Cascade)
  facility    Facility @relation(fields: [facility_id], references: [id], onDelete: Cascade)

  @@id([room_id, facility_id])
  @@index([room_id])
  @@index([facility_id])
}

model Registration {
  id                String             @id
  provider_id       Int
  status            RegistrationStatus @default(PENDING)
  metadata          Json
  created_at        DateTime           @default(now())
  updated_at        DateTime           @updatedAt
  approvalHistories ApprovalHistory[]
}

model ApprovalHistory {
  id              Int          @id @default(autoincrement())
  registration_id String
  registraton     Registration @relation(fields: [registration_id], references: [id], onDelete: Cascade)
  action          Action
  by              ActionTaker
  note            String?
  created_at      DateTime     @default(now())
}

model Ticket {
  id          Int      @id @default(autoincrement())
  service_id  Int
  name        String
  description String?
  price       Float
  place_id    Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  Service     Service  @relation(fields: [service_id], references: [id], onDelete: Cascade)
  Place       Place    @relation(fields: [place_id], references: [id], onDelete: Cascade)
}

model Voucher {
  id               Int       @id @default(autoincrement())
  service_id       Int?
  title            String
  code             String    @unique
  discount_percent Float
  description      String
  valid_from       DateTime?
  valid_to         DateTime?
  is_global        Boolean   @default(false)
  max_uses         Int?
  used_count       Int       @default(0)
  created_at       DateTime  @default(now())

  service  Service?  @relation(fields: [service_id], references: [id])
  bookings Booking[]
}

model Cart {
  id          Int      @id @default(autoincrement())
  traveler_id Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  traveler Traveler   @relation(fields: [traveler_id], references: [id], onDelete: Cascade)
  items    CartItem[]

  @@unique([traveler_id]) // Mỗi user chỉ có 1 giỏ hàng
}

enum CartItemType {
  ROOM
  TOUR
  TICKET
  MENU_ITEM
}

model CartItem {
  id            Int          @id @default(autoincrement())
  cart_id       Int
  item_type     CartItemType
  item_id       Int // ID của Room, Tour, Ticket, MenuItem
  quantity      Int          @default(1)
  checkin_date  DateTime? // cho ROOM, TOUR
  checkout_date DateTime? // cho ROOM
  visit_date    DateTime? // cho TOUR, TICKET (ngày sử dụng)
  note          String?

  cart Cart @relation(fields: [cart_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([cart_id])
  @@index([item_type, item_id])
}

enum BookingStatus {
  PENDING // Chưa thanh toán
  PAID // Đã thanh toán
  IN_PROGRESS // Đang diễn ra
  COMPLETED // Hoàn thành
  CANCELLED // Hủy
  REFUNDED // Hoàn tiền
}

model Booking {
  id              String        @id @default(cuid())
  traveler_id     Int
  provider_id     Int
  status          BookingStatus @default(PENDING)
  total_amount    Decimal       @db.Decimal(12, 2)
  discount_amount Decimal       @default(0) @db.Decimal(12, 2)
  final_amount    Decimal       @db.Decimal(12, 2)
  voucher_id      Int?
  booking_date    DateTime      @default(now())
  notes           String?

  traveler Traveler      @relation("TravelerBookings", fields: [traveler_id], references: [id])
  provider Provider      @relation(fields: [provider_id], references: [id])
  voucher  Voucher?      @relation(fields: [voucher_id], references: [id])
  items    BookingItem[]
  payments Payment[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  reviews    Review[]

  @@index([traveler_id])
  @@index([provider_id])
  @@index([status])
}

enum BookingItemType {
  ROOM
  TOUR
  TICKET
  MENU_ITEM
}

model BookingItem {
  id            Int             @id @default(autoincrement())
  booking_id    String
  item_type     BookingItemType
  item_id       Int // ID của Room/Tour/Ticket/MenuItem
  quantity      Int
  unit_price    Decimal         @db.Decimal(12, 2)
  total_price   Decimal         @db.Decimal(12, 2)
  checkin_date  DateTime?
  checkout_date DateTime?
  visit_date    DateTime?

  booking Booking @relation(fields: [booking_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())

  @@index([booking_id])
  @@index([item_type, item_id])
}

enum PaymentMethod {
  BANK_TRANSFER
  CREDIT_CARD
  MOMO
  ZALOPAY
  CASH
  VNPAY
  BLOCKCHAIN
  GRANTED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

model Payment {
  id             String        @id @default(cuid())
  booking_id     String
  amount         Decimal       @db.Decimal(12, 2)
  method         PaymentMethod
  status         PaymentStatus @default(PENDING)
  transaction_id String? // Mã giao dịch từ cổng thanh toán
  paid_at        DateTime?

  booking Booking @relation(fields: [booking_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([booking_id])
  @@index([status])
}

model Review {
  id         Int      @id @default(autoincrement())
  booking_id String
  rating     Int
  comment    String?
  created_at DateTime @default(now())

  booking Booking @relation(fields: [booking_id], references: [id])
}
